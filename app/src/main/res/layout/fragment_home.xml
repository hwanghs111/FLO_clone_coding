<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    #배경
        <ImageView
            android:id="@+id/home_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_4_x_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    #설정아이콘
        <ImageView
            android:id="@+id/home_btn_setting_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    #이용권아이콘
        <ImageView
            android:id="@+id/home_btn_ticket_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/home_btn_setting_iv"
            app:layout_constraintTop_toTopOf="@id/home_btn_setting_iv" />
    #음성아이콘
        <ImageView
            android:id="@+id/home_btn_nugu_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_nugu"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/home_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="@id/home_btn_setting_iv" />
    #타이틀
        <TextView
            android:id="@+id/home_title_tv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="포근하게 덮어주는 꿈의 목소리"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_btn_ticket_iv"
            />
    #재생아이콘
        <ImageView
            android:id="@+id/home_btn_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_title_tv" />
    #앨범1
        <ImageView
            android:id="@+id/home_album_exp_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_background_iv"
            />
    #앨범1제목
        <TextView
            android:id="@+id/home_album_exp_text_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 안온다"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/home_album_exp_iv"
            app:layout_constraintTop_toTopOf="@id/home_album_exp_iv"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp_text_02_tv"
            />
    #앨범1가수
        <TextView
            android:id="@+id/home_album_exp_text_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠(zen)"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/home_album_exp_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_album_exp_iv"
            app:layout_constraintTop_toBottomOf="@id/home_album_exp_text_01_tv"
            />
    #앨범2
        <ImageView
            android:id="@+id/home_album_exp2_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp_iv"
            />
    #앨범2제목
        <TextView
            android:id="@+id/home_album_exp2_text_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 안온다"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/home_album_exp2_iv"
            app:layout_constraintTop_toTopOf="@id/home_album_exp2_iv"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp2_text_02_tv"
            />
    #앨범2가수
        <TextView
            android:id="@+id/home_album_exp2_text_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠(zen)"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/home_album_exp2_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_album_exp2_iv"
            app:layout_constraintTop_toBottomOf="@id/home_album_exp2_text_01_tv"
            />
    #날짜
        <TextView
            android:id="@+id/home_album_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 15곡 2019.11.11"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp2_iv"

            />
    #오늘 발매 음악
        <TextView
            android:id="@+id/home_today_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_background_iv"
            app:layout_constraintEnd_toStartOf="@id/home_btn_arrow_iv"
            />
    #화살표 아이콘
        <ImageView
            android:id="@+id/home_btn_arrow_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/btn_arrow_more"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/home_today_title_tv"
            app:layout_constraintTop_toBottomOf="@id/home_background_iv"
            />
    #종합
        <TextView
            android:id="@+id/home_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textSize="16dp"
            android:textColor="#2F00CC"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_internal_tv"
            app:layout_constraintTop_toBottomOf="@id/home_background_iv"
            />
    #국내
        <TextView
            android:id="@+id/home_internal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textSize="16dp"
            android:textColor="#6F797A"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_abroad_tv"
            app:layout_constraintTop_toBottomOf="@id/home_background_iv"
            />
    #해외
        <TextView
            android:id="@+id/home_abroad_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="16dp"
            android:textColor="#6F797A"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_background_iv"
            />

    #오늘 발매 앨범
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_today_music_album_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/item_album"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/home_total_tv"
           />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_today_music_album_recyclerview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

   #팟캐스트 타이틀
        <TextView
            android:id="@+id/home_podcast_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일 들어도 좋은 팟캐스트"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent"
            />
   #팟캐스트1 이미지
        <ImageView
            android:id="@+id/home_podcast_exp_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_potcast_exp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_podcast_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            />
   #팟캐스트1 제목
        <TextView
            android:id="@+id/home_podcast_exp_text_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_podcast_exp_iv"
            app:layout_constraintStart_toStartOf="@id/home_podcast_exp_iv"
            app:layout_constraintBottom_toTopOf="@id/home_podcast_exp_text_02_tv"
            />
   #팟캐스트1 가수
        <TextView
            android:id="@+id/home_podcast_exp_text_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textColor="#6F797A"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/home_podcast_exp_iv"
            app:layout_constraintTop_toBottomOf="@id/home_podcast_exp_text_01_tv"
            />
   #팟캐스트2 이미지
        <ImageView
            android:id="@+id/home_podcast_exp2_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_potcast_exp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_podcast_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_podcast_exp_iv"
            />
   #팟캐스트2 제목
        <TextView
            android:id="@+id/home_podcast_exp2_text_01_tv"
