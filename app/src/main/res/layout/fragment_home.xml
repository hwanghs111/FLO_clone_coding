            android:text="제목"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_podcast_exp2_iv"
            app:layout_constraintStart_toStartOf="@id/home_podcast_exp2_iv"
            app:layout_constraintBottom_toTopOf="@id/home_podcast_exp2_text_02_tv"
            />
