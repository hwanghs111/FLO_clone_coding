<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
#플레이어세팅 버튼
    <ImageView
        android:id="@+id/song_btn_playersetting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_setting"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
#EQ 버튼
    <ImageView
        android:id="@+id/song_btn_eq_off_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_eq_off"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/song_btn_playersetting_iv"
        app:layout_constraintTop_toTopOf="@id/song_btn_playersetting_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_playersetting_iv"/>
#밑 화살표 버튼

    <ImageView
        android:id="@+id/song_btn_downArrow_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_eq_off_iv"
        app:layout_constraintTop_toTopOf="@id/song_btn_eq_off_iv" />
#더보기 버튼
    <ImageView
        android:id="@+id/song_btn_more_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/song_btn_downArrow_iv"
        app:layout_constraintTop_toBottomOf="@id/song_btn_downArrow_iv"/>

#제목
    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_more_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
#가수
    <TextView
        android:id="@+id/song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
#오른쪽 화살표 버튼
    <ImageView
        android:id="@+id/song_btn_rightArrow_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_arrow_more"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/song_singer_tv"
        app:layout_constraintTop_toTopOf="@id/song_singer_tv"
        />
#앨범사진
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/song_album_card_view"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_singer_tv"
        >
        <ImageView
            android:id="@+id/song_album_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_album_exp2"
            />
    </androidx.cardview.widget.CardView>

#가사
    <TextView
        android:id="@+id/song_music_lyrics_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="나라는 꽃가루에"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/song_album_card_view"
        app:layout_constraintStart_toStartOf="@id/song_album_card_view"
        app:layout_constraintTop_toBottomOf="@+id/song_album_card_view"/>

    <TextView
        android:id="@+id/song_music_lyrics_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="눈이 따끔해 아야"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/song_music_lyrics_01_tv"
        app:layout_constraintStart_toStartOf="@id/song_music_lyrics_01_tv"
        app:layout_constraintTop_toBottomOf="@+id/song_music_lyrics_01_tv"/>

<LinearLayout
    android:id="@+id/song_like_iv_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="@id/song_album_card_view"
    app:layout_constraintStart_toStartOf="@id/song_album_card_view"
    app:layout_constraintTop_toBottomOf="@id/song_music_lyrics_02_tv">
#하트
    <ImageView
        android:id="@+id/song_like_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_my_like_off" />
#unlike
    <ImageView
        android:id="@+id/song_unLike_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_unlike_off"
        android:layout_marginStart="50dp" />

</LinearLayout>
    #재생바

    #현재재생시간

    <SeekBar
        android:id="@+id/song_player_sb"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:max="1000"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="0"
        android:progressBackgroundTint="@color/song_player_bg"
        android:progressTint="@color/song_player"
        android:thumb="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_like_iv_layout" />
#음악시작시간
    <TextView
        android:id="@+id/song_startTime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="15dp"
        android:textColor="@color/purple_700"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_player_sb"
        app:layout_constraintStart_toStartOf="parent"
        />

#음악길이
    <TextView
        android:id="@+id/song_endTime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textColor="#C0C0C0"
        android:textSize="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_player_sb"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/song_playout_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_btn_related_iv"
        app:layout_constraintTop_toBottomOf="@id/song_player_sb"
        >
        <ImageView
            android:id="@+id/song_btn_previous_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/btn_miniplayer_previous" />
        <ImageView
            android:id="@+id/song_btn_miniplayer_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_play" />
        <ImageView
            android:id="@+id/song_btn_pause_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplay_mvpause"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/song_btn_next_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/btn_miniplayer_next"
            />
    </LinearLayout>
#반복재생
    <ImageView
        android:id="@+id/song_btn_repeat_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        app:layout_constraintTop_toTopOf="@id/song_playout_layout"
        app:layout_constraintEnd_toStartOf="@id/song_playout_layout"
        app:layout_constraintStart_toStartOf="parent"
        />
#셔플
    <ImageView
        android:id="@+id/song_btn_random_inactive_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nugu_btn_random_inactive"
        app:layout_constraintTop_toTopOf="@id/song_playout_layout"
        app:layout_constraintStart_toEndOf="@id/song_playout_layout"
        app:layout_constraintEnd_toEndOf="parent"
        />
#인스타그램
    <ImageView
        android:id="@+id/song_btn_instagram_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
#유사곡
    <ImageView
        android:id="@+id/song_btn_related_iv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_related"
        android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
#플레이리스트
    <ImageView
        android:id="@+id/song_btn_player_go_list_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_go_list"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>