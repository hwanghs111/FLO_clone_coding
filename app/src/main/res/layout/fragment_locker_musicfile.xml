<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    #전체선택 체크표시
    <ImageView
        android:id="@+id/file_all_select_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    #전체선택
    <TextView
        android:id="@+id/file_all_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@id/file_all_select_iv"
        app:layout_constraintStart_toEndOf="@id/file_all_select_iv"
        />

    #재생버튼 아이콘
    <ImageView
        android:id="@+id/file_all_listen_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_browse_arrow_right"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/file_all_select_iv"
        app:layout_constraintStart_toEndOf="@id/file_all_select_tv"
        />

    #전체듣기
    <TextView
        android:id="@+id/file_all_listen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@id/file_all_select_iv"
        app:layout_constraintStart_toEndOf="@id/file_all_listen_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>